void menu(int& a, int& b, int& c) {
    int d = 0; 
    while (d != 4) { // запуск выбора
        cout << "1 - Ввод верхнего предела " << endl;
        cout << " Число - " << a << endl;
        cout << "2 - Ввод нижнего предела " << endl;
        cout << " Число - " << b << endl; 
        cout << "3 - Изменить число " << endl;
        cout << " Число - " << c << endl; 
        cout << "4 - Выйти " << endl;
        cout << "Выберите действие ";
        cin >> d;
        switch (d) {
        case(1):
            cout << "Изменить "; 
            cin >> a;
            cout << endl;
            break;
        case(2):
            cout << "Изменить ";
            cin >> b;
            cout << endl;
            break;
        case(3):
            cout << "Изменить входящее число на - "; 
            cin >> c;
            cout << endl;
            break;
        }
        if (d == 4) exit;
    }
}

