//График квадратной функции y=x*tan(x)
#include <graphics.h> // описание граф. функций С/С++ Borland
#include <conio.h>      // описание функций ввода-вывода с консоли
#include <math.h>      // описание мат. функций

int main(void)
{
    float x, y;
    int gdriver = DETECT, gmode;
    initgraph(&gdriver, &gmode, "");     // входит в граф. библиотеку Borland - Инициализация граф. режима
    setbkcolor(1);                                      // синий цвет фона
    line(50, 0, 50, 480); line(50, 200, 640, 200);     //координатные оси
    moveto(50, 200);                            // переход в начало координат
    x = 0;
    do
    {
        y = x * tan(x);
        lineto(20 + x * 40, 100 + (100 - (y * 40)));     // (входит в графическую библиотеку Borland) график
        x = x + 0.02;
    } while (x < 10);
    getch();                 // ожидание нажатия клавиши
    closegraph();        // (входит в графическую библиотеку Borland) выход из граф. режима
    return 0;
}
